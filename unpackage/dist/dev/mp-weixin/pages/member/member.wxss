.bg {
  width: 100%;
  height: 305rpx;
  background-color: #b50e03;
  color: white;
  border-radius: 0 0 150rpx 150rpx;
}
.line {
  height: 56rpx;
  background-color: #b50e03;
}
.head {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.rq {
  width: 90%;
  height: 166rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 25rpx 25rpx 0 0;
  border: 1rpx solid #f0f0f0;
  /* border-bottom: 2rpx solid #ccc; */
}
.touxiang {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 3rpx 3rpx 6rpx;
  margin: -50rpx 0 5rpx 0;
  border: 10rpx solid #fff;
}
.nicheng {
  font-size: 27rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  color: black;
}
/* 收藏 */
.count {
  width: 90%;
  height: 97.9rpx;
  display: flex;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 0 0 25rpx 25rpx;
  border: 1rpx solid #f0f0f0;
  box-shadow: 0 10rpx 5rpx #f0f0f0;
}
.desc {
  flex: 1;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 6px;
  color: #333;
}
